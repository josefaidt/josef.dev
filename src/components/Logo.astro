---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"a">

const { href, class: className, ...props } = Astro.props
---

<div id="logo" class="relative">
  <a href={href}>
    <h1 class="text-4xl select-none" data-layer="1">josef</h1>
  </a>
  <span
    class="text-4xl font-medium absolute top-[1px] left-[2px] -z-10 blur-[0.1px] select-none"
    data-layer="2"
  >
    josef
  </span>
  <span
    class="text-4xl font-medium absolute top-[2px] left-[3px] -z-20 blur-[0.2px] select-none"
    data-layer="3"
  >
    josef
  </span>
  <span
    class="text-4xl font-medium absolute top-[3px] left-[4px] -z-30 blur-[0.3px] select-none"
    data-layer="4"
  >
    josef
  </span>
</div>

<style>
  #logo {
    letter-spacing: 0.05rem;
  }

  #logo > a {
    text-decoration: none;
  }

  #logo > span {
    font-family: Josefin Sans;
    transform-style: preserve-3d;
    text-rendering: optimizeLegibility;
    color: var(--josef-text-color);
  }

  /* Dark theme colors (default) */
  #logo span[data-layer="2"] {
    color: var(--color-orange);
  }
  #logo span[data-layer="3"] {
    color: var(--color-accent);
  }
  #logo span[data-layer="4"] {
    color: var(--color-rouge-800);
  }

  /* Light theme - flip the color order */
  @media (prefers-color-scheme: light) {
    #logo [data-layer="1"] {
      color: var(--color-rouge-900);
    }
    #logo span[data-layer="2"] {
      color: var(--color-rouge-700);
    }
    #logo span[data-layer="3"] {
      color: var(--color-accent);
    }
    #logo span[data-layer="4"] {
      color: var(--color-orange);
    }
  }
</style>
