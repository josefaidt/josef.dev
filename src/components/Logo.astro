---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"a">

const { href, class: className, ...props } = Astro.props
---

<div id="logo" class="relative">
  <a href={href}>
    <h1 class="text-4xl select-none">josef</h1>
  </a>
  <span
    class="text-4xl font-medium absolute top-[1px] left-[2px] -z-10 blur-[0.1px] select-none"
    style="color:var(--color-orange);"
  >
    josef
  </span>
  <span
    class="text-4xl font-medium absolute top-[2px] left-[3px] -z-20 blur-[0.2px] select-none"
    style="color:var(--color-accent);"
  >
    josef
  </span>
  <span
    class="text-4xl font-medium absolute top-[3px] left-[4px] -z-30 blur-[0.3px] select-none"
    style="color:var(--color-rouge-800);"
  >
    josef
  </span>
</div>

<style>
  #logo {
    letter-spacing: 0.05rem;
  }

  #logo > a {
    text-decoration: none;
  }

  #logo > span {
    font-family: Josefin Sans;
    transform-style: preserve-3d;
    text-rendering: optimizeLegibility;
    color: var(--josef-text-color);
  }
</style>
