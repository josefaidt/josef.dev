{
  "name": "josef.dev",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "sirv public --single",
    "build": "NODE_ENV=production webpack",
    "dev": "run-p dev:webpack dev:routify",
    "dev:webpack": "webpack-dev-server --content-base public",
    "dev:routify": "routify"
  },
  "dependencies": {
    "@roxi/routify": "^2.0.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "acorn": "^8.0.1",
    "acorn-walk": "^8.0.0",
    "css-loader": "^2.1.1",
    "express-graphql": "^0.11.0",
    "file-loader": "^6.1.0",
    "front-matter": "^4.0.2",
    "graphql": "^15.3.0",
    "graphql-request": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mdsvex": "^0.8.7",
    "mini-css-extract-plugin": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.1.1",
    "reading-time": "^1.2.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-images": "^2.0.0",
    "remark-slug": "^6.0.0",
    "sirv": "^1.0.6",
    "style-loader": "^0.23.1",
    "svelte": "^3.0.0",
    "svelte-loader": "2.13.3",
    "svelte-preprocess": "^4.2.1",
    "svg-inline-loader": "^0.8.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "routify": {
    "pages": "./pages",
    "dynamicImports": true,
    "routifyDir": ".routify"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "lint-staged": {
    "*.{js,md,svelte,svx,json,html,css}": [
      "prettier --write"
    ]
  }
}
