{
  "name": "josef.dev",
  "private": true,
  "workspaces": [
    "packages/*",
    "api"
  ],
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "pnpm run build --filter ./packages --parallel",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview"
  },
  "dependencies": {
    "@jlengstorf/get-share-image": "^0.8.0",
    "@urql/core": "^2.3.6",
    "fuzzyset": "^1.0.7",
    "graphql": "^16.2.0",
    "marked": "^4.0.9",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@josef/graphql": "workspace:*",
    "@josef/markdown": "workspace:*",
    "@josef/plugin-vercel": "workspace:*",
    "@rollup/plugin-dynamic-import-vars": "^1.4.1",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/adapter-vercel": "next",
    "@sveltejs/kit": "next",
    "autoprefixer": "^10.4.2",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.3.0",
    "highlight.js": "^11.4.0",
    "highlightjs-graphql": "^1.0.2",
    "js-yaml": "^4.1.0",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.5",
    "svelte": "^3.45.0",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "svelte-themer": "next",
    "vercel": "^23.1.2",
    "vite": "^2.7.10"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "svelte3"
    ],
    "ignorePatterns": [
      "*.cjs"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  }
}
