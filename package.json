{
  "name": "josef.dev",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "support"
  ],
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "node scripts/build",
    "postbuild": "svelte-kit adapt",
    "start": "svelte-kit start"
  },
  "devDependencies": {
    "@josefaidt/support": "*",
    "@mapbox/rehype-prism": "^0.5.0",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/snowpack-config": "next",
    "autoprefixer": "^10.2.4",
    "postcss": "^8.2.6",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "svelte": "^3.29.0",
    "svelte-preprocess": "^4.6.6"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "lint-staged": {
    "*.{js,md,svelte,svx,json,html,css}": [
      "prettier --write"
    ]
  }
}
