{
  "name": "josef.dev",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "sirv build --single",
    "build": "run-s build:routify build:svite",
    "build:routify": "routify run -b",
    "build:svite": "svite build --outDir build",
    "dev": "run-p dev:routify dev:svite",
    "dev:svite": "svite dev",
    "dev:routify": "routify run"
  },
  "dependencies": {
    "@roxi/routify": "^2.0.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "acorn": "^8.0.1",
    "acorn-walk": "^8.0.0",
    "front-matter": "^4.0.2",
    "graphql": "^15.3.0",
    "graphql-request": "^3.0.0",
    "husky": "^4.2.5",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "lint-staged": "^10.2.13",
    "mdsvex": "^0.8.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.1.1",
    "reading-time": "^1.2.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-images": "^2.0.0",
    "remark-slug": "^6.0.0",
    "rollup-plugin-svelte-svg": "^0.2.3",
    "sirv": "^1.0.6",
    "svelte": "^3.0.0",
    "svelte-hmr": "^0.11.0",
    "svelte-preprocess": "^4.2.1",
    "svite": "^0.7.0",
    "url-loader": "^4.1.0"
  },
  "routify": {
    "pages": "./src/pages",
    "dynamicImports": true,
    "routifyDir": ".routify",
    "extensions": [
      "svelte",
      "svx"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "lint-staged": {
    "*.{js,md,svelte,svx,json,html,css}": [
      "prettier --write"
    ]
  }
}
